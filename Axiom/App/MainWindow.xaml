<Window x:Class="Axiom.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:avalonEdit="http://icsharpcode.net/sharpdevelop/avalonedit"
        mc:Ignorable="d"
        Width="1000"
        Height="700"
        Title="Axiom"
        Background="#2B2B2B"
        WindowStartupLocation="CenterScreen">
    <DockPanel>

        <!-- Native WPF Menu -->
        <Menu DockPanel.Dock="Top">

            <MenuItem Header="_File">
                <MenuItem Header="_New" Click="NewFile_Click" />
                <MenuItem Header="_Open..." Click="OpenFileMenuButtonHandler" />
                <MenuItem Header="_Save" Click="NewFile_Click" />
                <MenuItem Header="Save _As..." Click="NewFile_Click" />
                <Separator />
                <MenuItem Header="E_xit" Click="ExitMenuButtonHandler" />
            </MenuItem>

            <MenuItem Header="_Edit">
                <MenuItem Header="_Undo" Click="NewFile_Click" />
                <MenuItem Header="_Redo" Click="NewFile_Click" />
                <Separator />
                <MenuItem Header="Cu_t" Click="NewFile_Click" />
                <MenuItem Header="_Copy" Click="NewFile_Click" />
                <MenuItem Header="_Paste" Click="NewFile_Click" />
                <Separator />
                <MenuItem Header="Select _All" Click="NewFile_Click" />
            </MenuItem>

            <MenuItem Header="_View">
                <MenuItem Header="Toggle _Line Numbers"
                          IsCheckable="True"
                          IsChecked="True"
                          Click="NewFile_Click" />
            </MenuItem>

            <MenuItem Header="_Run">
                <MenuItem Header="_Run File (F5)" Click="NewFile_Click" />
                <Separator />
                <MenuItem Header="Language">
                    <MenuItem Header="Python"
                              IsCheckable="True"
                              IsChecked="True"
                              Click="NewFile_Click" />
                    <MenuItem Header="C#"
                              IsCheckable="True"
                              Click="NewFile_Click" />
                    <MenuItem Header="JavaScript"
                              IsCheckable="True"
                              Click="NewFile_Click" />
                </MenuItem>
            </MenuItem>

            <MenuItem Header="_Help">
                <MenuItem Header="_About" Click="NewFile_Click" />
            </MenuItem>

        </Menu>

        <!-- Avalon Editor -->
        <avalonEdit:TextEditor
            x:Name="Editor"
            Background="#2B2B2B"
            Foreground="White"
            FontFamily="Consolas"
            FontSize="14"
            ShowLineNumbers="True" />

    </DockPanel>

</Window>