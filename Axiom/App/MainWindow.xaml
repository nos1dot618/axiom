<Window x:Class="Axiom.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:avalonEdit="http://icsharpcode.net/sharpdevelop/avalonedit"
        xmlns:documents="clr-namespace:Axiom.UI.Documents"
        xmlns:lsp="clr-namespace:Axiom.UI.Lsp"
        xmlns:editor="clr-namespace:Axiom.UI.Editor"
        xmlns:project="clr-namespace:Axiom.UI.Project"
        mc:Ignorable="d"
        Title="Axiom"
        Style="{DynamicResource CustomWindowStyle}"
        WindowStartupLocation="CenterScreen">
    <DockPanel>

        <Menu DockPanel.Dock="Top">

            <MenuItem Header="_File">
                <MenuItem Header="_New" Command="{x:Static documents:FileUiController.NewFileCommand}" />
                <MenuItem Header="_Open..." Command="{x:Static documents:FileUiController.OpenFileCommand}" />
                <MenuItem Header="_Save" />
                <MenuItem Header="Save _As..." />
                <Separator />
                <MenuItem Header="E_xit" Command="{x:Static editor:EditorUiController.ExitCommand}" />
            </MenuItem>

            <MenuItem Header="_Edit">
                <MenuItem Header="_Undo" />
                <MenuItem Header="_Redo" />
                <Separator />
                <MenuItem Header="Cu_t" />
                <MenuItem Header="_Copy" />
                <MenuItem Header="_Paste" />
                <Separator />
                <MenuItem Header="Select _All" />
                <Separator />
                <MenuItem Header="Reload Configuration" Command="{x:Static editor:EditorUiController.ReloadCommand}" />
            </MenuItem>

            <MenuItem Header="_View">
                <MenuItem Header="Toggle _Line Numbers" IsCheckable="True" IsChecked="True" />
                <Separator />
                <MenuItem Header="Increase Font Size"
                          Command="{x:Static editor:EditorUiController.IncreaseFontSizeCommand}" />
                <MenuItem Header="Decrease Font Size"
                          Command="{x:Static editor:EditorUiController.DecreaseFontSizeCommand}" />
                <Separator />
                <MenuItem Header="_Themes" x:Name="ThemesMenuItem" />
            </MenuItem>

            <MenuItem Header="_Run">
                <MenuItem Header="_Run File" Command="{x:Static documents:FileUiController.RunFileCommand}" />
            </MenuItem>

            <MenuItem Header="_Project">
                <MenuItem Header="_Build Project" Command="{x:Static project:ProjectUiController.BuildProjectCommand}" />
                <MenuItem Header="_Run Project" Command="{x:Static project:ProjectUiController.RunProjectCommand}" />
                <MenuItem Header="_Stop Build" Command="{x:Static project:ProjectUiController.StopBuildCommand}" />
                <MenuItem Header="Show Build _Logs"
                          Command="{x:Static project:ProjectUiController.ShowBuildLogsCommand}" />
            </MenuItem>

            <MenuItem Header="_Tools">
                <MenuItem Header="_Language" x:Name="LanguageMenuItem" />
                <Separator />
                <MenuItem Header="Language Server">
                    <MenuItem x:Name="LanguageServerEnabledMenuItem"
                              Header="Enable Language Server"
                              IsCheckable="True"
                              IsChecked="True"
                              Command="{x:Static lsp:LspUiController.ToggleLspCommand}"
                              CommandParameter="{Binding RelativeSource={RelativeSource Self}}" />
                    <Separator />
                    <MenuItem x:Name="CodeCompletionMenuItem"
                              Header="Code Completion"
                              IsCheckable="True"
                              IsChecked="True"
                              IsEnabled="{Binding IsChecked, ElementName=LanguageServerEnabledMenuItem}"
                              Command="{x:Static lsp:LspUiController.ToggleFeatureCommand}"
                              CommandParameter="{Binding RelativeSource={RelativeSource Self}}" />
                    <MenuItem x:Name="DiagnosticsMenuItem"
                              Header="Diagnostics"
                              IsCheckable="True"
                              IsChecked="True"
                              IsEnabled="{Binding IsChecked, ElementName=LanguageServerEnabledMenuItem}"
                              Command="{x:Static lsp:LspUiController.ToggleFeatureCommand}"
                              CommandParameter="{Binding RelativeSource={RelativeSource Self}}" />
                </MenuItem>
            </MenuItem>

            <MenuItem Header="_Help">
                <MenuItem Header="_About" />
            </MenuItem>

        </Menu>

        <StatusBar DockPanel.Dock="Bottom">
            <StatusBarItem>
                <TextBlock x:Name="TimerText" Text="00:00" />
            </StatusBarItem>
            <StatusBarItem>
                <TextBlock x:Name="StatusText" Text="Ready" />
            </StatusBarItem>
            <StatusBarItem HorizontalAlignment="Stretch">
                <Grid />
            </StatusBarItem>
        </StatusBar>

        <avalonEdit:TextEditor x:Name="Editor" PreviewMouseWheel="EditorPreviewMouseWheel" />

    </DockPanel>

</Window>